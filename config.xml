<?xml version='1.0' encoding='utf-8'?>
<widget id="ly.inspir.lite" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>inspirly LITE</name>
    <description>
        Create easily beautiful images out of words with the inspirly designer AI and share them on instagram, facebook, whatsapp and co.
    </description>
    <author email="contact@inspir.ly" href="http://www.inspir.ly">
        Inspir.ly Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <config-file parent="LSApplicationQueriesSchemes" platform="ios" target="*-Info.plist">
            <array>
                <string>whatsapp</string>
                <string>facebook</string>
                <string>instagram</string>
                <string>snapchat</string>
            </array>
        </config-file>
    </platform>
    <access origin="*" />
    <access origin="http://192.168.178.22:8080/*" />
    <preference name="orientation" value="portrait" />
    <icon src="icon.png" />
    <engine name="ios" spec="^4.4.0" />
    <plugin name="cordova-plugin-device" spec="^1.1.6" />
    <plugin name="cordova-plugin-admobpro" spec="^2.29.21" />
    <plugin name="cordova-plugin-camera" spec="^2.4.1" />

    <plugin name="cordova-plugin-gallery-refresh" spec="^1.0.56" />
    <plugin name="cordova-plugin-screen-orientation" spec="^2.0.1" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
    <plugin name="cordova-plugin-x-socialsharing" spec="^5.1.8" />
    <engine name="android" spec="~6.2.3" />
    <plugin name="cordova-plugin-extension" spec="^1.5.1" />
    <plugin name="cordova-plugin-compat" spec="^1.1.0" />
    <plugin name="cordova-plugin-apprate" spec="^1.3.0" />
    <plugin name="ionic-plugin-keyboard" spec="^2.2.1" />
</widget>
