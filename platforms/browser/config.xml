<?xml version='1.0' encoding='utf-8'?>
<widget id="ly.inspir.lite" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Camera">
        <param name="browser-package" value="Camera" />
    </feature>
    <feature name="Device">
        <param name="browser-package" value="Device" />
    </feature>
    <name>inspirly LITE</name>
    <description>
        Create easily beautiful images out of words with the inspirly designer AI and share them on instagram, facebook, whatsapp and co.
    </description>
    <author email="contact@inspir.ly" href="http://www.inspir.ly">
        Inspir.ly Team
    </author>
    <content src="index.html" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <access origin="*" />
    <access origin="http://192.168.178.22:8080/*" />
    <icon src="icon.png" />
    <preference name="orientation" value="portrait" />
</widget>
